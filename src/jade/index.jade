html
  head
    title Gif Booth!
    link(rel='stylesheet' href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet' href='style.css')
    meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
  body
    // main container
    #main.container.text-center
      #lead
        h1 #{config.event.title}
        h2
          ul
            each link in config.event.links
              li
                a(href="#{link.url}") #{link.title}
      #alerts.row
      #tweets.row
        #loading loading...
      .row
        span#load-more.hidden.btn.btn-default load more gifs
    script.
      var ENV = !{JSON.stringify(config)}
    script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.3.6/socket.io.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-alpha1/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/js/bootstrap.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.3/handlebars.runtime.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.23/browser-polyfill.js')
    script(src='templates.js')
    script(src='tweeter.js')
    script(src='main.js')
